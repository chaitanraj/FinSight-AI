generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String?
  email    String   @unique
  password String?
  expenses Expense[]
  provider String @default("local")
}

model Expense {
  id        Int      @id @default(autoincrement())
  userId    Int?
  merchant  String
  amount    Float
  category  String?
  date      DateTime @default(now())
  metadata  Json?

  user      User?    @relation(fields: [userId], references: [id])
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
}
